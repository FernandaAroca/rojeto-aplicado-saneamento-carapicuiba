

# # ==============================================================================
# PROJETO APLICADO I - ANÁLISE EXPLORATÓRIA DO SANEAMENTO EM CARAPICUÍBA (SP)
# # ==============================================================================

# 1. IMPORTAÇÃO DOS PACOTES E DADOS
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns
import numpy as np

sns.set_style("whitegrid")
pd.set_option('display.max_columns', None)

# -------------------------------------------------------
# 1.1 Leitura do arquivo
# -------------------------------------------------------
caminho_arquivo = 'br_mdr_snis_municipio_agua_esgoto.csv'

try:
    df = pd.read_csv(caminho_arquivo, encoding='utf-8')
    print("Sucesso: Arquivo CSV carregado corretamente.")
except Exception as e:
    print(f"ERRO CRÍTICO AO LER ARQUIVO: {e}")
    raise SystemExit(0)


# ==============================================================================
# 2. PREPARAÇÃO DOS DADOS
# ==============================================================================

# IBGE correto de Carapicuíba
IBGE_CARAPICUIBA = 3510609

# RMSP (lista oficial do IBGE – 39 municípios)
codigos_rmsp = [
    3509502, 3505708, 3502804, 3503208, 3507605, 3509007, 3510609, 3513009,
    3513801, 3515002, 3516309, 3518800, 3522505, 3523107, 3525003, 3529401,
    3530607, 3534401, 3539808, 3543302, 3546808, 3548708, 3550308, 3552205,
    3552502, 3552809, 3553005, 3554102, 3554300, 3556452, 3556700, 3556957
]

# Seleção das colunas relevantes
df_analise = df[[
    'ano',
    'id_municipio',
    'populacao_urbana',
    'indice_atendimento_urbano_agua',
    'indice_coleta_esgoto'
]].copy()

# Renomeação
df_analise.rename(columns={
    'ano': 'Ano',
    'id_municipio': 'IBGE',
    'populacao_urbana': 'POP_URBANA',
    'indice_atendimento_urbano_agua': 'IN055_AGUA',
    'indice_coleta_esgoto': 'IN015_ESGOTO'
}, inplace=True)

# Tipagem correta
df_analise['Ano'] = pd.to_numeric(df_analise['Ano'], errors='coerce')
df_analise['IBGE'] = pd.to_numeric(df_analise['IBGE'], errors='coerce').astype('Int64')

colunas_num = ['POP_URBANA', 'IN055_AGUA', 'IN015_ESGOTO']
for col in colunas_num:
    df_analise[col] = pd.to_numeric(df_analise[col], errors='coerce')


# ==============================================================================
# 3. FILTROS (RMSP + CARAPICUÍBA)
# ==============================================================================
df_rmsp = df_analise[df_analise['IBGE'].isin(codigos_rmsp)].copy()
df_carapicuiba = df_rmsp[df_rmsp['IBGE'] == IBGE_CARAPICUIBA].copy()

print(f"\nRegistros RMSP: {len(df_rmsp)}")
print(f"Registros Carapicuíba: {len(df_carapicuiba)}")


# ==============================================================================
# 4. ANÁLISE DESCRITIVA
# ==============================================================================

print("\n--- Estatísticas Descritivas RMSP ---")
estatisticas = df_rmsp[['IN055_AGUA', 'IN015_ESGOTO']].describe().round(2)
print(estatisticas)

print("\n--- Quantidade de Valores Ausentes ---")
print(df_rmsp[['IN055_AGUA', 'IN015_ESGOTO', 'POP_URBANA']].isna().sum())


# ==============================================================================
# 5. VISUALIZAÇÕES
# ==============================================================================

# --------------------------------------------------------------------------
# FIGURA 1 – Boxplot RMSP + Média Carapicuíba
# --------------------------------------------------------------------------
df_plot = df_rmsp[['IN015_ESGOTO']].copy()
df_plot['Região'] = 'RMSP'

plt.figure(figsize=(8, 6))
sns.boxplot(data=df_plot, x='Região', y='IN015_ESGOTO')

if not df_carapicuiba.empty:
    media_cara = df_carapicuiba['IN015_ESGOTO'].mean()
    plt.scatter(x=0, y=media_cara, s=150, color='red', label='Carapicuíba (média)')
    plt.legend()

plt.title("Figura 1: Distribuição da Cobertura de Esgoto (IN015) – RMSP")
plt.ylabel("Percentual de Coleta de Esgoto (%)")
plt.xlabel("")
plt.savefig("Figura_1_Boxplot_RMSP.png", dpi=300)
plt.show()


# --------------------------------------------------------------------------
# FIGURA 2 – Evolução Temporal (Somente se existirem dados)
# --------------------------------------------------------------------------
if not df_carapicuiba.empty:

    plt.figure(figsize=(12,6))
    sns.lineplot(data=df_carapicuiba, x='Ano', y='IN055_AGUA', marker='o', label='Água (IN055)')
    sns.lineplot(data=df_carapicuiba, x='Ano', y='IN015_ESGOTO', marker='s', label='Esgoto (IN015)')

    plt.title("Figura 2: Evolução Histórica da Cobertura de Água e Esgoto – Carapicuíba")
    plt.xlabel("Ano")
    plt.ylabel("Percentual de Cobertura (%)")
    plt.grid(axis='y')
    plt.legend()
    plt.savefig("Figura_2_Evolucao_Carapicuiba.png", dpi=300)
    plt.show()

else:
    print("\nAVISO: Carapicuíba não possui dados suficientes para gerar a Figura 2.")


print("\n--- FIM DA ANÁLISE (CÓDIGO CORRIGIDO) ---")
